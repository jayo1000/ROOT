<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		 xmlns="http://java.sun.com/xml/ns/javaee" 
		 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
		 http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>Project_ROOT</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>kr.or.greenb.common.web.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/errors/error_500.jsp</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/errors/error_404.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/errors/error_404.jsp</location>
  </error-page>
  <servlet>
    <servlet-name>FrontControllerServlet</servlet-name>
    <servlet-class>kr.or.greenb.common.web.FrontControllerServlet</servlet-class>
    <init-param>
      <param-name>controllerMapping</param-name>
      <param-value>D:/kosta126/workspace/ROOT/WebContent/WEB-INF/controllerMapping.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <description>FileUploadServlet</description>
    <servlet-name>FileUploadServlet</servlet-name>
    <servlet-class>kr.or.greenb.servlet.FileUploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileUploadServlet</servlet-name>
    <url-pattern>/upload.greenb</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>FileDownloadServlet</description>
    <servlet-name>FileDownloadServlet</servlet-name>
    <servlet-class>kr.or.greenb.servlet.FileDownloadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FileDownloadServlet</servlet-name>
    <url-pattern>/download.greenb</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>FrontControllerServlet</servlet-name>
    <url-pattern>*.htm</url-pattern>
  </servlet-mapping>
</web-app>